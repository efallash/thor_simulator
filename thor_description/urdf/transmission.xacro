<!-- Transmissions are defined as EffortJointInterface-->
 

<robot xmlns:xacro="http://wiki.ros.org/xacro">
  <xacro:macro name="thor_transmission" params="prefix">
    <transmission name="${prefix}Art1_Yaw_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="${prefix}Art1_Yaw">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        </joint>
        <actuator name="${prefix}Art1_Yaw_motor">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>
    <transmission name="${prefix}Art2_Pitch_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="${prefix}Art2_Pitch">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        </joint>
